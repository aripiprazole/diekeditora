{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "paths": {
      "@diekeditora/admin": ["./src"],
      "@diekeditora/admin/*": ["./src/*"],
      "@diekeditora/store": ["../store/dist"],
      "@diekeditora/store/*": ["../store/dist/*"]
    }
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.js", "**/*.jsx", "**/*.tsx"],
  "exclude": ["node_modules"]
}
