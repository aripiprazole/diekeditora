{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx"
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
