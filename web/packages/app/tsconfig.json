{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@diekeditora/app/*": ["./src/*"],
      "@diekeditora/app": ["./src"],
      "@diekeditora/graphql/*": ["../graphql/src/*"],
      "@diekeditora/graphql": ["../graphql/src"]
    },
    "target": "es5"
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["cypress", "node_modules", ".storybook", "**/*.stories.tsx", "**/*.stories.mdx"]
}
