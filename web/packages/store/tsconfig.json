{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "target": "ES3",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "~/": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
